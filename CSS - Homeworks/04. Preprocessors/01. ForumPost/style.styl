bgcolor = 179, 94, 243
linkcolor = #aaaaaa
buttonborder = 1px solid #603382
blackborder = 1px solid #000
buttonHoverBg = #8949b9
pagefont = normal Arial
strongEmColor = #ccc

bggradient()
	background: rgb(195,160,236)
	background: -moz-linear-gradient(top, rgba(195,160,236,1) 0%, rgba(215,145,255,1) 0%, rgba(210,146,253,1) 1%, rgba(197,138,242,1) 5%, rgba(164,57,244,1) 15%, rgba(145,29,240,1) 20%, rgba(143,25,239,1) 21%, rgba(146,21,242,1) 25%, rgba(146,21,242,1) 100%)
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(195,160,236,1)), color-stop(0%,rgba(215,145,255,1)), color-stop(1%,rgba(210,146,253,1)), color-stop(5%,rgba(197,138,242,1)), color-stop(15%,rgba(164,57,244,1)), color-stop(20%,rgba(145,29,240,1)), color-stop(21%,rgba(143,25,239,1)), color-stop(25%,rgba(146,21,242,1)), color-stop(100%,rgba(146,21,242,1)))
	background: -webkit-linear-gradient(top, rgba(195,160,236,1) 0%,rgba(215,145,255,1) 0%,rgba(210,146,253,1) 1%,rgba(197,138,242,1) 5%,rgba(164,57,244,1) 15%,rgba(145,29,240,1) 20%,rgba(143,25,239,1) 21%,rgba(146,21,242,1) 25%,rgba(146,21,242,1) 100%)
	background: -o-linear-gradient(top, rgba(195,160,236,1) 0%,rgba(215,145,255,1) 0%,rgba(210,146,253,1) 1%,rgba(197,138,242,1) 5%,rgba(164,57,244,1) 15%,rgba(145,29,240,1) 20%,rgba(143,25,239,1) 21%,rgba(146,21,242,1) 25%,rgba(146,21,242,1) 100%)
	background: -ms-linear-gradient(top, rgba(195,160,236,1) 0%,rgba(215,145,255,1) 0%,rgba(210,146,253,1) 1%,rgba(197,138,242,1) 5%,rgba(164,57,244,1) 15%,rgba(145,29,240,1) 20%,rgba(143,25,239,1) 21%,rgba(146,21,242,1) 25%,rgba(146,21,242,1) 100%)
	background: linear-gradient(to bottom, rgba(195,160,236,1) 0%,rgba(215,145,255,1) 0%,rgba(210,146,253,1) 1%,rgba(197,138,242,1) 5%,rgba(164,57,244,1) 15%,rgba(145,29,240,1) 20%,rgba(143,25,239,1) 21%,rgba(146,21,242,1) 25%,rgba(146,21,242,1) 100%)

.clearfix
	zoom 1
	&:after,&:before
		content "\0020"
		display block
		height 0
		overflow hidden
	&:after
		clear both

body,header,section,footer,article,h1,h2,h3,h4,h5,h6,input,button,label,p,fieldset,nav,ul,li,a,span,strong,em
	margin 0
	padding 0
	border 0
	
div,h1,h3,h4,h5,h6,header,footer,body,section,nav,article,aside
	display block
	
body
	bggradient()
	font 14px pagefont
	color white
	header
		padding 25px 15px 5px
		div#header-container
			@extend .clearfix
			div#logo-container
				float left
				position relative
			div#reg-form-container
				float right
				position relative
				right 5%
				top 50%
				div
					text-align right
					label
						width 50px
						margin 5px
					input
						width 130px
						border buttonborder
						border-radius 10px
						padding 2px 5px
						margin 5px
						background-color rgb(bgcolor)
				button
					margin-left auto
					margin-right auto
					font-weight bold
					border buttonborder
					border-style outset
					border-radius 10px
					padding 5px 8px
					background-color rgb(bgcolor)
					color #fff
					&:hover
						background-color: buttonHoverBg
						border-style inset
		nav
			@extend .clearfix
			display inline-block
			width 75%
			margin 20px
			padding 12px
			border blackborder
			border-radius 15px
			ul.nav-list
				@extend .clearfix
				list-style-type none
			ul li
				float left
				margin 0
				a
					text-decoration none
					padding 0 10px 0 10px
					color #fff
					font 1.4em pagefont
					&.selected
						font-weight bold
				&:hover > a
					text-decoration underline
					color #a8a8a8
					+ ul
						display block
				ul.sub-nav-list
					position absolute
					display none
					background-color rgba(bgcolor, 0.9)
					border-radius 5px
				ul li
					float none
					margin 0 15px
					padding 10px 0
					border-bottom blackborder
					&:last-of-type
						border-bottom none
					> a
						font-size 1.2em
						color #fff
	section
		@extend .clearfix
		width 75%
		float left
		color #fff
		article
			margin 20px
			padding 20px
			border blackborder
			border-radius 15px
			header
				background none
				padding 5px
				h1
					font-size 1.4em
					padding 0
			footer
				padding 5px
				p
					font-size 16px
					text-align right
					font-weight normal
					time
						font-family Consolas, 'Lucida Console', 'DejaVu Sans Mono', monospace
					a
						text-decoration none
						color linkcolor
						&:visited
							color linkcolor
						&:hover
							text-decoration underline
	aside
		@extend .clearfix
		float left
		width 20%
		margin 20px
		> ul
			list-style-type none
			> li
				margin 15px 0
				padding 15px
				border blackborder
				border-radius 5px
				h2
					font-size 1.1em
					font-weight bold
				p
					margin 10px 5px
					font-size 14px
					a
						color linkcolor
						text-decoration none
					strong
						color strongEmColor
						font-weight bold
						font-style normal
					em
						color strongEmColor
						font-weight normal
						font-style italic
				ul
					list-style-type none
					margin 10px 0
					li
						margin 5px 10px 0 0
						background url('images/li-dot.png') no-repeat
						background-position 0 50%
						padding-left 25px
	footer
		clear both
		padding 15px 0 25px
		p
			font-size 1.2em
			font-weight bold
			text-align center